<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Login Form - SCR Reservas</title>
    <link rel="stylesheet" href="{{ asset('css/login_form.css') }}" type="text/css">
    <meta name="robots" content="noindex,follow" />
</head>
<body>
    <div class="container">
        <div class="login">
            <h1>SCR Reservas</h1>
            {% if erros %}
                <div class="erros">{{ erros.message | trans }}</div>
            {% endif %}

            <form method="POST" action="{{ path('login') }}" id="form_login">
                <p>
                    <label for="username">Nome de usuário:</label>
                    <input type="text" id="username" name="_username" value="{{ ultimo_username }}">
                </p>
                <p>
                    <label for="password">Senha:</label>
                    <input type="password" id="password" name="_password" value="">
                </p>

                {# Campo hidden que protege contra ataques CSRF #}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <p class="submit"><input type="submit" name="commit" value="Login"></p>
            </form>
        </div>
        <div class="login_info">
            <p>Nome de usuário: <span>admin</span></p>
            <p>Senha: <span>admin</span></p>
        </div>
    </div>
</body>
</html>
